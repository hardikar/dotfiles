autodetach on

statup_message off

# start screen at window 1 and bind window 0 to 10 
bind c screen 1
bind ^c screen 1
bind 0 select 10                                                            
screen 1

hardstatus alwayslastline 
# Very nice tabbed colored hardstatus line
hardstatus string '%{= Kd} %{= Kd}%-w%{= Kr}[%{= KW}%n %t%{= Kr}]%{= Kd}%+w %-= %{KG} %H%{KW}|%{KY}%101`%{KW}|%D %M %d %Y%{= Kc} %C%A%{-}'


